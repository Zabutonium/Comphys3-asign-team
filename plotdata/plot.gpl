reset
set terminal gif animate optimize
set size square
set output "plot.gif"
RANGE = 15
set xrange [-RANGE:RANGE]
set yrange [-RANGE:RANGE]
set grid

MT = 0.003   #tの最大値
dev = 100.0  #tを何分割するか =n
do for [i = 0.0:dev] {
    t = i * MT / dev
    img(i) = sprintf("plot_i=%d.dat",i)
    time = sprintf("t = %f",t)
    set title time
    set xlabel "x"
    set ylabel "y"
    plot img(i) using 1:2 ps 0.6 pt 7 title "質点たち"
}