reset
set terminal gif animate optimize delay 10 size -10000,10000
set output "plot.gif"
set style line 1 ps 0.6 pt 7 lt 3
set xrange [-10:10]
set yrange [-10:10]

N  = 10 #particleの数
MT = 10   #tの最大値
dev = 100  #tを何分割するか =n
do for [i = 0:dev] {
    t = i * MT / dev
    img(i) = sprintf("plot_i=%d.dat",i)
    time = sprintf("t = %f",t)
    set title time
    plot img(i) using 1:2 ls 1
}