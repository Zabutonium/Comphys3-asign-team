reset
set terminal gif animate optimize delay 5
set size square
set output "plot.gif"
RANGE = 40.0
set xrange [-RANGE:RANGE]
set yrange [-RANGE:RANGE]
set grid

N = 5000 #質点の数
MT = 5.0   #tの最大値
dev = 500.0  #tを何分割するか =n
do for [i = 0.0:dev] {
    t = i * MT / dev
    img(i) = sprintf("plot_i=%d.dat",i)
    time = sprintf("N = %d,t = %f",N,t)
    set title time
    set xlabel "x"
    set ylabel "y"
    plot img(i) using 1:2 ps 0.3 pt 7
}