reset
set terminal gif animate optimize delay 15
set size square
set output "plot.gif"
set xrange [-10:10]
set yrange [-10:10]
set grid

MT = 0.5   #tの最大値
dev = 100.0  #tを何分割するか =n
do for [i = 0.0:dev] {
    t = i * MT / dev
    img(i) = sprintf("plot_i=%d.dat",i)
    time = sprintf("t = %f",t)
    set title time
    set xlabel "x"
    set ylabel "y"
    plot img(i) using 1:2 ps 0.6 pt 7 title "質点たち"
}